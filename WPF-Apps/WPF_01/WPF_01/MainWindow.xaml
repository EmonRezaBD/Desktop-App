        <!--Design static and dynamic rows-->
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition /> <!--It will shrink dynamically-->
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        
        <!--Menu Bar-->
        <Rectangle Grid.Row="0" Fill="Aquamarine"/>
        
        <!--Content Bar-->
        <!--<Rectangle Grid.Row="1" Fill="RosyBrown"/>-->
        <Grid Grid.Row="1"> <!--I created a Grid in Row 1 to build different cols-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="20*"/> <!--* for proportionally resizing, making fraction of 100-->
                <ColumnDefinition Width="60*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>

            <Rectangle Grid.Column="0" Fill="LightGray"/>
            <Rectangle Grid.Column="1" Fill="DimGray"/>
            <Rectangle Grid.Column="2" Fill="LightGray"/>
            
        </Grid>
        
        <!--Footer-->
        <Rectangle Grid.Row="3" Fill="Turquoise"/>


    </Grid>
