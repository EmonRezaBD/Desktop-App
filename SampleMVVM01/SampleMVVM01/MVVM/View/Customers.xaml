<Window x:Class="SampleMVVM01.MVVM.View.Customers"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleMVVM01.MVVM.View"
        mc:Ignorable="d"
        Title="Customers" Height="415" Width="270">
    <Grid Margin="0,0,19,24">
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="26,28,25,28">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Customer Full Name" Width="250"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
